@using BKFoodCourt.Models

@{
    ViewBag.Title = "Index";
    if (LoginSignUpModel.State == true)
    {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout1.cshtml";
    }
}

@section css
{
    <link rel="stylesheet" href="~/Assets/Order/main.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
}
@{
    ListFood listFood = new ListFood();
    ListOrder listOrder = new ListOrder();
}
<div id="wrapper">
    <div class="cart-icon-top">
    </div>
    <div class="cart-icon-bottom">
    </div>
    <div id="checkout">
        CHECKOUT
    </div>
    <!-- <div id="info">
        <p class="i1">Add to cart interaction prototype by Virgil Pana</p>
    <p>    Follow me on <a href="https://dribbble.com/virgilpana" style="color:#ea4c89" target="_blank">Dribbble</a> | <a style="color:#2aa9e0" href="https://twitter.com/virgil_pana" target="_blank">Twitter</a></p>
    </div> -->
    <div id="sidebar">
        <h3>CART</h3>
        <div id="cart">
            <span class="empty">No items in cart.</span>
        </div>

        <h3>CATEGORIES</h3>
        <div class="checklist categories">
            <ul>
                <li><a href=""><span></span>Quầy thứ 1</a></li>
                <li><a href=""><span></span>Quầy thứ 2</a></li>
                <li><a href=""><span></span>Quầy thứ 3</a></li>
            </ul>
        </div>
        <h3>SIZES</h3>
        <div class="checklist sizes">
            <ul>
                <li><a href=""><span></span>S</a></li>
                <li><a href=""><span></span>M</a></li>
            </ul>
        </div>

        <h3>PRICE RANGE</h3>
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/price-range.png" alt="" />
    </div>
    <div id="grid">

        @foreach(Food food in listFood.foods)
        {

            <div class="product">
                <div class="info-large">
                    <h4>@food.Name</h4>
                    <div class="sku">
                        PRODUCT SKU: <strong>89356</strong>
                    </div>

                    <div class="price-big">
                        <span>$4</span> '@food.Price'
                    </div>
                    <h3>SIZE</h3>
                    <div class="sizes-large">
                        <span>M</span>
                        <span>L</span>
                    </div>

                    <button class="add-cart-large">Add To Cart</button>

                </div>

                <div class="make3D">
                    <div class="product-front">
                        <div class="shadow"></div>
                        <img src="@food.Url" alt="" />
                        <div class="image_overlay"></div>
                        <div class="add_to_cart">Add to cart</div>
                        <div class="view_gallery">View gallery</div>
                        <div class="stats">
                            <div class="stats-container">
                                <span class="product_price">@food.Price đ </span>
                                <span class="product_name">@food.Name</span>
                                <p>Food</p>

                                <div class="product-options">
                                    <strong>SIZES</strong>
                                    <span>M, L</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="product-back">
                        <div class="shadow"></div>
                        <div class="carousel">
                            <div class="arrows-perspective">
                                <div class="carouselPrev">
                                    <div class="y"></div>
                                    <div class="x"></div>
                                </div>
                                <div class="carouselNext">
                                    <div class="y"></div>
                                    <div class="x"></div>
                                </div>
                            </div>
                        </div>
                        <div class="flip-back">
                            <div class="cy"></div>
                            <div class="cx"></div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


@section scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/Assets/Order/script.js"></script>
}


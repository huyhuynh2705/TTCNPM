
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="card shadow mb-4" style="left: 20px;">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="slideshow-container">

                    <div class="mySlides fade">
                        <div class="numbertext">1 / 3</div>
                        <img class="food-image" src="https://static2.yan.vn/YanNews/2167221/201911/top-nhung-quan-ca-vien-chien-duoc-hang-tram-ban-tre-yeu-thich-0dfd0f78.jpg">
                    </div>

                    <div class="mySlides fade">
                        <div class="numbertext">2 / 3</div>
                        <img class="food-image" src="https://static2.yan.vn/YanNews/2167221/201911/top-nhung-quan-ca-vien-chien-duoc-hang-tram-ban-tre-yeu-thich-0dfd0f78.jpg">
                    </div>

                    <div class="mySlides fade">
                        <div class="numbertext">3 / 3</div>
                        <img class="food-image" src="https://static2.yan.vn/YanNews/2167221/201911/top-nhung-quan-ca-vien-chien-duoc-hang-tram-ban-tre-yeu-thich-0dfd0f78.jpg">
                    </div>

                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>

                </div>
                <br>
            </div>
        </div>
    </div>
    <div class="card shadow mb-4 card-price">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">

                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1" style="font-size: 16px;"><a href="#">CÁ VIÊN CHIÊN</a></div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$1</div>
                    </div>
                    <div class="col-auto">
                        <a href=@Url.Action("Index","Cart")>Đặt hàng</a>
                    </div>
                </div>
                <br>
                <div>Đây là phần mô tả</div>
            </div>
        </div>

    </div>
</div>

